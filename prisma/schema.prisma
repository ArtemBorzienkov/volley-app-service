// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int              @id
  firstName String
  lastName  String?          @default("")
  userName  String?          @default("")
  email     String?          @default("")
  isPremium Boolean?         @default(false)
  member    TrainingMember[]

  @@map("users")
}

model TrainingMember {
  id         Int      @id @default(autoincrement())
  userId     Int
  trainingId Int
  createdAt  Int
  isInvited  Boolean
  user       User     @relation(fields: [userId], references: [id])
  training   Training @relation(fields: [trainingId], references: [id])

  @@map("training_members")
}

model Training {
  id         Int              @id @default(autoincrement())
  date       Int
  msg        Int?
  maxMembers Int?
  members    TrainingMember[]
  configId   String
  config     ConfigEvent      @relation(fields: [configId], references: [chat_id])

  @@map("trainings")
}

model ConfigEvent {
  chat_id     String     @id
  coach_id    Int
  day         String
  time        String
  max         Int
  location    String
  isForum     Boolean?
  publish_day String
  topic_id    Int?
  trainings   Training[]

  @@map("configs")
}
